  
<%= "Logged in as #{current_user.fname}"%><br><br>

<h2>Friends</h2>

  <% if @friends.any? %>
    <ul>
      <% @friends.each do |friend| %>
        <li><%= link_to friend.fname, friend %></li>
      <% end %>
    </ul>
  <% else %>
    <p>No friends yet.</p>
  <% end %>
</div>

<% if current_user.id == @user.id %>
  <%= link_to "Friendship", 'http://localhost:3000/users/'+(@user.id).to_s+'/friendships'%>
<%end%>