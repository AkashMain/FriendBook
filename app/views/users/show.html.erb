<h1>Users#show</h1>
<p>Find me in app/views/users/show.html.erb</p>


<div class="friendship-requests">
  <h2>Friendship Requests</h2>

  <% if @pending_friendship_requests_received.any? %>
    <h3>Pending Requests</h3>

    <ul>
      <% @pending_friendship_requests_received.each do |request| %>
        <li>
          <%= link_to request.sender.fname, request.sender %>
          <%= link_to "Accept", accept_friendship_path(request), method: :patch %>
          <%= link_to "Decline", decline_friendship_path(request), method: :delete %>
        </li>
      <% end %>
    </ul>
  <% end %>

  <% if @accepted_friendship_requests_received.any? %>
    <h3>Accepted Requests</h3>

    <ul>
      <% @accepted_friendship_requests_received.each do |request| %>
        <li>
          <%= link_to request.sender.name, request.sender %>
        </li>
      <% end %>
    </ul>
  <% end %>

  <% if @declined_friendship_requests_received.any? %>
    <h3>Declined Requests</h3>

    <ul>
      <% @declined_friendship_requests_received.each do |request| %>
        <li>
          <%= link_to request.sender.name, request.sender %>
        </li>
      <% end %>
    </ul>
  <% end %>
</div>



