<h1>POST</h1>
<br>

<p>
    <%= @post.body%> 
</p>

<h3>Comments</h3> <br>
<% @post.comments.each do |comment|%>
    <p><%= comment.content %> 
    <%if current_user.id==comment.user.id%>
        <%= link_to 'delete', post_comment_path(@post,comment), method: :delete, data: {confirm: "Do you want to delte this comment"}, style: 'color:#E34234' %> 
    <%end%></p> 
<%end%>

<%if current_user.id!=@post.user.id%>
    <h3>Add comments</h3>
    <%= render 'comments/form', post:@post%>
<%end%>